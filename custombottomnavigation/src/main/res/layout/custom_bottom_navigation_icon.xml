<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vClickSelected"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp" />

        <View
            android:id="@+id/vClickNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp" />

<!--        <androidx.cardview.widget.CardView-->
<!--            android:id="@+id/cv"-->
<!--            android:layout_width="@dimen/size_icon"-->
<!--            android:layout_height="@dimen/size_icon"-->
<!--            android:outlineAmbientShadowColor="#4376FA"-->
<!--            android:outlineSpotShadowColor="#4376FA"-->
<!--            app:cardBackgroundColor="#4376FA"-->
<!--            app:cardCornerRadius="10dp"-->
<!--            app:cardElevation="18dp"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/iv"-->
<!--            app:layout_constraintLeft_toLeftOf="@id/iv"-->
<!--            app:layout_constraintRight_toRightOf="@id/iv"-->
<!--            app:layout_constraintTop_toTopOf="@id/iv" />-->
        <ImageView
            android:id="@+id/cv"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:elevation="16dp"
            android:background="@drawable/shadow_background"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintLeft_toLeftOf="@id/iv"
            app:layout_constraintRight_toRightOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv" />

        <View
            android:id="@+id/shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintLeft_toLeftOf="@id/iv"
            app:layout_constraintRight_toRightOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv"
            android:background="@drawable/rounded_transparent_gradient" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:elevation="19dp"
            android:outlineProvider="none"
            app:layout_constraintBottom_toTopOf="@id/tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/sourcesanspro_regular"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textSize="12sp"
            android:paddingHorizontal="3dp"
            android:text="test"
            android:textColor="@color/tv_normal"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textSize="12sp"
            android:paddingHorizontal="3dp"
            android:text="test"
            android:textColor="@color/tv_selected"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>