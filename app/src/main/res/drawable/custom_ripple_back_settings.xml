        <shape android:shape="rectangle">
            <solid android:color="#FF0000" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
        </shape>
    </item>
</ripple>