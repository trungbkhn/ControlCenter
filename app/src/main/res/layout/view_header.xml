<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbarHeight"
        android:background="@color/colorPrimary"
        android:layoutDirection="ltr"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp">

        <ImageView
            android:id="@+id/imBack"
            android:layout_width="@dimen/size_icon_back"
            android:layout_height="@dimen/size_icon_back"
            android:layout_gravity="center_vertical"
            android:background="@drawable/custom_ripple_image"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_bold"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/choose_music_player"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/textsizeTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imgDone"
            android:layout_width="@dimen/size_icon_back"
            android:layout_height="@dimen/size_icon_back"
            android:layout_gravity="center_vertical"
            android:background="@drawable/custom_ripple_image"
            android:scaleType="centerInside"
            android:src="@drawable/icon_done"
            app:tint="@color/_9D9D9D"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_ripple_back_settings"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/sf_pro_display_medium"
            android:padding="8dp"
            android:text="@string/done"
            android:textColor="@color/color_007AFF"
            android:textSize="17sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
