<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginHorizontal="12dp"
            android:textSize="@dimen/text_size_15"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/colorWhite"
            android:id="@+id/tvDislay"
            android:text="@string/sound"
            android:gravity="start|center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sbSound"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group4.CustomSeekbarHorizontalView
            android:id="@+id/sbSound"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.38"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ImageView
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:id="@+id/imgSound"
            android:src="@drawable/ic_control_music_ios"
            app:layout_constraintTop_toTopOf="@id/sbSound"
            app:layout_constraintBottom_toBottomOf="@id/sbSound"
            app:layout_constraintStart_toStartOf="@id/sbSound"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>