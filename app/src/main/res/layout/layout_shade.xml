        <ImageView
            android:id="@+id/lineControlNoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_line_control_noty"
            app:layout_constraintLeft_toLeftOf="@+id/flBrightness"
            app:layout_constraintRight_toRightOf="@+id/flBrightness"
            app:layout_constraintTop_toBottomOf="@+id/flBrightness" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rccNoty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/left"
            app:layout_constraintRight_toRightOf="@id/right"
            app:layout_constraintTop_toBottomOf="@+id/lineControlNoty" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.PermissionNotificationView
            android:id="@+id/permissionNotiView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:isControlCenter="false"
            app:layout_constraintLeft_toLeftOf="@id/left"
            app:layout_constraintRight_toRightOf="@id/right"
            app:layout_constraintTop_toBottomOf="@+id/lineControlNoty" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btnClearNoty"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:elevation="1dp"
            android:scaleType="center"
            app:cardCornerRadius="@dimen/margin_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/rccNoty"
            app:layout_constraintLeft_toLeftOf="@+id/rccNoty"
            app:layout_constraintRight_toRightOf="@+id/rccNoty">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="14dp"
                android:src="@drawable/ic_clear_noty_night" />
        </androidx.cardview.widget.CardView>


