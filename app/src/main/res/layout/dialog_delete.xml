<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_background_dialog_delete"
            app:layout_constraintBottom_toTopOf="@id/tv_cancel"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/do_you_want_to_delete_this_focus"
            android:gravity="center"
            android:textColor="#7C7C80"
            android:textSize="13sp"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="@id/view_dialog_title"
            app:layout_constraintEnd_toEndOf="@id/view_dialog_title"
            app:layout_constraintStart_toStartOf="@id/view_dialog_title"
            app:layout_constraintBottom_toTopOf="@id/view_title" />

        <View
            android:id="@+id/view_title"
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:layout_marginBottom="2dp"
            android:background="@color/color_C6C6C8"
            app:layout_constraintBottom_toTopOf="@id/tv_delete"
            app:layout_constraintEnd_toEndOf="@id/view_dialog_title"
            app:layout_constraintStart_toStartOf="@id/view_dialog_title" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:padding="15dp"
            android:background="@drawable/custom_background_delete"
            android:text="@string/delete_focus"
            android:gravity="center"
            android:textColor="@color/color_FF3B30"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/view_dialog_title"
            app:layout_constraintEnd_toEndOf="@id/view_dialog_title"
            app:layout_constraintStart_toStartOf="@id/view_dialog_title"

            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:background="@drawable/custom_background_item_new_automation"
            android:fontFamily="@font/sf_pro_display_medium"
            android:padding="15dp"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="@color/color_007AFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/view_dialog_title"
            app:layout_constraintStart_toStartOf="@+id/view_dialog_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>