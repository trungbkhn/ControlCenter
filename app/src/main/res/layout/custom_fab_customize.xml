<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/imAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/imAdd"
            app:layout_constraintTop_toTopOf="@id/imAdd">

            <com.tapbi.spark.controlcenter.views.ExpandableConstraintLayout
                android:id="@+id/clFab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#2073F8"
                app:cardCornerRadius="28dp">

                <com.tapbi.spark.controlcenter.views.ExpandableConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="22dp"
                    app:layout_constraintBottom_toBottomOf="@id/imAdd1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/imAdd1"
                    app:layout_constraintTop_toTopOf="@id/imAdd1">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/customize"
                        android:textColor="@color/white" />


                </com.tapbi.spark.controlcenter.views.ExpandableConstraintLayout>

                <ImageView
                    android:id="@+id/imAdd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fab_add"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.tapbi.spark.controlcenter.views.ExpandableConstraintLayout>

        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/imAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>