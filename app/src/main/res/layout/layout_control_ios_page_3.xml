<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp">

        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionAirplane"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:tag="Airplane mode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionWifi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:tag="Wifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionAirplane" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionData"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:tag="Data mobile"
            app:colorSelect="@color/color_select_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionWifi" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionBlueTooth"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:tag="Bluetooth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionData" />



        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionSilent"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            app:colorSelect="@color/color_select_green"
            android:tag="Silent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionBlueTooth" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionLocation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            app:colorSelect="@color/color_select_red"
            android:tag="Location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionSilent" />
        <com.tapbi.spark.controlcenter.feature.controlios14.view.ViewActionHorizontal
            android:id="@+id/actionSync"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            app:colorSelect="@color/color_select_green"
            android:tag="Sync"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionLocation" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>