<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:max="255"-->
<!--        android:progress="0"-->
<!--        android:progressDrawable="@drawable/progress_seekbar_horizontal"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"/>-->

    <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group4.CustomSeekbarHorizontalView
        android:id="@+id/sbBrightness"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.38"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:padding="4dp"
        android:layout_marginStart="4dp"
        android:id="@+id/imgBrightness"
        android:src="@drawable/ic_control_brightness_ios"
        app:layout_constraintTop_toTopOf="@id/sbBrightness"
        app:layout_constraintBottom_toBottomOf="@id/sbBrightness"
        app:layout_constraintStart_toStartOf="@id/sbBrightness"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>