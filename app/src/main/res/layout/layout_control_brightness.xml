<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginHorizontal="12dp"
        android:textSize="@dimen/text_size_15"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/colorWhite"
        android:id="@+id/tvDislay"
        android:text="@string/display"
        android:gravity="start|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sbBrightness"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

<!--    <com.tapbi.spark.controlcenter.feature.controlios14.view.control.base.horizontalseekbar.HorizontalThumbSeekbar-->
<!--        android:id="@+id/sbBrightness"-->
<!--        android:layout_margin="12dp"-->
