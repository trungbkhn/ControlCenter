<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.89" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.11" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.13" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlPage2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/glh6"
            app:layout_constraintEnd_toEndOf="@id/glv9"
            app:layout_constraintStart_toStartOf="@id/glv1"
            app:layout_constraintTop_toTopOf="@id/glh1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vgl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.08" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vgl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.92" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hgl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.651" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hgl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.045" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hgl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.514" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hgl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.619" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_corner_28"
                android:background="#59333333"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cvPlayerIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="24dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/hgl2"
                app:layout_constraintEnd_toEndOf="@id/vgl2"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintTop_toTopOf="@id/hgl1"
                app:shapeAppearanceOverlay="@style/rounded_corner_5"
                app:srcCompat="@drawable/a1" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/sf_pro_text_semi_bold"
                android:freezesText="true"
                android:gravity="start|bottom"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/audio_music"
                android:textColor="@color/colorTextControl"
                android:textSize="@dimen/text_size_14"
                android:layout_marginEnd="6dp"
                app:layout_constraintBottom_toTopOf="@id/tvArtist"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintTop_toBottomOf="@id/hgl2"
                app:layout_constraintEnd_toStartOf="@id/imgVisual"/>
            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/sf_pro_text_regular"
                android:marqueeRepeatLimit="marquee_forever"
                android:freezesText="true"
                android:gravity="start|bottom"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/colorTextControl"
                android:textSize="@dimen/text_size_14"
                android:text="dsfdsjbgdfjsbgdf"
                android:layout_marginEnd="6dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintEnd_toStartOf="@+id/imgVisual"
                app:layout_constraintBottom_toBottomOf="@id/hgl3" />

            <ImageView
                android:id="@+id/imgVisual"
                android:layout_width="19dp"
                android:layout_height="0dp"
                android:src="@drawable/volume_visual"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/vgl2"
                app:layout_constraintTop_toTopOf="@id/tvName"
                app:layout_constraintBottom_toBottomOf="@id/tvArtist" />

            <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group4.CustomSeekbarHorizontalView
                android:id="@+id/controlTimeMusic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:progress="0"
                app:layout_constraintHeight_percent="0.0116"
                app:layout_constraintTop_toBottomOf="@id/hgl4"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintEnd_toEndOf="@id/vgl2" />

            <TextView
                android:id="@+id/tvTimeCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:maxLines="1"
                android:text="0:00"
                android:minWidth="70dp"
                android:textSize="@dimen/text_size_12"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/controlTimeMusic"
                app:layout_constraintStart_toStartOf="@id/vgl1" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|end"
                android:maxLines="1"
                android:text="0:00"
                android:textSize="@dimen/text_size_12"
                android:minWidth="70dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@id/vgl2"
                app:layout_constraintTop_toBottomOf="@id/controlTimeMusic" />

            <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
                android:id="@+id/previousAction"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_pre"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintEnd_toStartOf="@id/playPauseAction"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.119"
                app:layout_constraintTop_toBottomOf="@id/tvTimeCurrent" />
            <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
                android:id="@+id/playPauseAction"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/play"
                app:layout_constraintStart_toEndOf="@id/previousAction"
                app:layout_constraintEnd_toStartOf="@id/nextAction"
                app:layout_constraintTop_toTopOf="@id/previousAction"
                app:layout_constraintBottom_toBottomOf="@id/previousAction"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.108" />
            <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
                android:id="@+id/nextAction"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_next"
                app:layout_constraintStart_toEndOf="@id/playPauseAction"
                app:layout_constraintTop_toTopOf="@id/previousAction"
                app:layout_constraintBottom_toBottomOf="@id/previousAction"
                app:layout_constraintEnd_toStartOf="@id/vgl2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.119" />

            <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group4.CustomSeekbarHorizontalView
                android:id="@+id/controlVolume"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:progress="0"
                android:layout_marginTop="16dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                app:layout_constraintHeight_percent="0.0116"
                app:layout_constraintTop_toBottomOf="@id/playPauseAction"
                app:layout_constraintStart_toEndOf="@id/icVolumeMin"
                app:layout_constraintEnd_toStartOf="@id/icVolumeMax" />
            <ImageView
                android:id="@+id/icVolumeMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_min"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintTop_toTopOf="@id/controlVolume"
                app:layout_constraintBottom_toBottomOf="@id/controlVolume"/>
            <ImageView
                android:id="@+id/icVolumeMax"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:src="@drawable/ic_volume_max"
                app:layout_constraintEnd_toEndOf="@id/vgl2"
                app:layout_constraintTop_toTopOf="@id/controlVolume"
                app:layout_constraintBottom_toBottomOf="@id/controlVolume"/>
            <TextView
                android:id="@+id/tvHeadphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/white"
                android:textSize="11.5dp"
                android:text="@string/speakerphone"
                android:gravity="center"
                android:background="@drawable/bg_textview_rounded"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp"
                android:drawablePadding="4.5dp"
                app:drawableStartCompat="@drawable/phone_small"
                app:layout_constraintStart_toStartOf="@id/vgl1"
                app:layout_constraintEnd_toEndOf="@id/vgl2"
                app:layout_constraintTop_toBottomOf="@id/controlVolume"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>