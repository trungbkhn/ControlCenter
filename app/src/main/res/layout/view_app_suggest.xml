<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vHeader"
        android:layout_width="match_parent"
        android:layout_height="39.00dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorBackgroundTopWidget"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_siri"
        app:layout_constraintBottom_toBottomOf="@id/vHeader"
        app:layout_constraintStart_toStartOf="@id/vHeader"
        app:layout_constraintTop_toTopOf="@id/vHeader" />

    <TextView
        android:id="@+id/tvAppSuggest"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center_vertical|start"
        android:text="@string/app_suggestions"
        android:textColor="@color/colorTextTitleWidget"
        android:textDirection="ltr"
        android:textSize="@dimen/textsizeContent"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toStartOf="@+id/actionShowMore"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon" />

    <TextView
        android:id="@+id/actionShowMore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_0dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/show_less"
        android:textColor="@color/colorTextTitleWidget"
        android:textDirection="ltr"
        android:textSize="@dimen/textsizeTitleWidget"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vHeader"
        app:layout_constraintRight_toRightOf="@id/vHeader"
        app:layout_constraintTop_toTopOf="@id/icon" />

    <View
        android:id="@+id/rltContent"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        android:background="@color/colorBackgroundContentWidget"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/vHeader"
        app:layout_constraintStart_toStartOf="@id/vHeader"
        app:layout_constraintTop_toBottomOf="@id/vHeader" />

    <TextView
        android:id="@+id/tvPermissionAppRecent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/access_permission_app_recent"
        android:textColor="@color/colorTextLockContent"
        android:textDirection="ltr"
        android:textSize="@dimen/textsizeContent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vHeader" />

    <LinearLayout
        android:id="@+id/containerSuggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vHeader">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvSuggest1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvSuggest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>

</merge>