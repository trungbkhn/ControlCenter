<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootDialog"
        android:padding="@dimen/padding_16"
        android:clickable="true"
        android:background="#79000000"
        android:layout_height="match_parent"
        android:gravity="center"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/bg_vpg"
            android:id="@+id/viewContent"
            android:clickable="true"
            android:padding="@dimen/padding_16"
            android:layout_height="wrap_content"
            android:focusable="true">

            <TextView
                android:id="@+id/tvSetup"
                android:textSize="@dimen/text_19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/setup"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTypeAction"
                android:textSize="@dimen/text_19sp"
                android:layout_marginStart="@dimen/margin_4dp"
                app:layout_constraintStart_toEndOf="@id/tvSetup"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="NFC"
                android:lines="1"
                android:gravity="start"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDes"
                android:text="@string/dialog_setup_noty_des_1"
                app:layout_constraintTop_toBottomOf="@id/tvTypeAction"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgIcTypeAction"
                app:layout_constraintTop_toBottomOf="@id/tvDes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />

            <ImageView
                android:id="@+id/imgIcHand"
                app:layout_constraintTop_toBottomOf="@id/imgIcTypeAction"
                app:layout_constraintStart_toStartOf="@id/imgIcTypeAction"
                android:layout_marginStart="@dimen/margin_15dp"
                android:src="@drawable/ic_hand"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp" />

            <View
                android:id="@+id/vSpace"
                app:layout_constraintTop_toBottomOf="@+id/imgIcHand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30" />

<!--            tu dong mo he thong cho lan sau-->

            <CheckBox
                android:id="@+id/cbAuto"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_custom"
                android:text="@string/auto_open_system_noty"
                android:paddingStart="@dimen/padding_8dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintTop_toBottomOf="@+id/vSpace"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvOpenSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_system"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textSize="@dimen/text_18sp"
                app:layout_constraintTop_toBottomOf="@id/cbAuto"
                android:textColor="@color/color_green_icon"
                android:background="?android:attr/selectableItemBackground" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</layout>
