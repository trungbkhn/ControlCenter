<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <androidx.constraintlayout.widget.ConstraintLayout-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintHeight_percent="0.986"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp">-->

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline5"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
            android:id="@id/guidelineH7"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline4"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline6"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.52"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.47"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline2"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.53"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@id/guideline3"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"/>

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.WifiSettingView
            android:id="@+id/wifi_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_mi_wifi"
            android:padding="10dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintHeight_percent="0.272"
            app:layout_constraintEnd_toEndOf="@id/guideline50"
            app:layout_constraintTop_toTopOf="@id/guideline4" />

        <TextView
            android:id="@+id/tvWifi"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/wi_fi"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/wifi_action"
            app:layout_constraintBottom_toTopOf="@id/guidelineH50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline50"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.DataSettingView
            android:id="@+id/data_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/ic_mi_mobile_data"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.272"/>

        <TextView
            android:id="@+id/tvDataMobile"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/data_mobile"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintBottom_toTopOf="@id/guidelineH50"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_action"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.BluetoothSettingView
            android:id="@+id/bluetooth_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_mi_bluetooth"
            android:padding="10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.272"
            app:layout_constraintStart_toStartOf="@id/guideline5"
            app:layout_constraintEnd_toEndOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="@id/guideline6" />

        <TextView
            android:id="@+id/tvBluetooth"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_10"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/bluetooth"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@id/guidelineH7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline50"
            app:layout_constraintTop_toBottomOf="@id/bluetooth_action"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.AirPlaneSettingView
            android:id="@+id/airplane_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:src="@drawable/ic_mi_airplane"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintHeight_percent="0.272"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/guideline6" />

        <TextView
            android:id="@+id/tvAirPlane"
            android:paddingBottom="5dp"
            android:textSize="@dimen/text_size_10"
            android:paddingStart="1dp"
            android:paddingEnd="2dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/airplane"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintTop_toBottomOf="@id/airplane_action"
            app:layout_constraintBottom_toBottomOf="@id/guidelineH7"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineH50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.48" />



<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>