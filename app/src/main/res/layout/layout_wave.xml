<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/imgWave1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="1.30dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/wave_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGsm"
        app:layout_constraintBottom_toBottomOf="@+id/tvGsm"/>

    <TextView
        android:id="@+id/tvGsm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2.60dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:text="@string/no_sim"
        android:textColor="@android:color/white"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toEndOf="@id/imgWave1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvGsm2"
        tools:ignore="UnusedAttribute" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSim1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imgWave1, tvGsm" />


    <ImageView
        android:id="@+id/imgWave2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/wave_0"

        app:layout_constraintBaseline_toBaselineOf="@id/tvGsm2"
        app:layout_constraintStart_toStartOf="@id/imgWave1"
        app:layout_constraintTop_toTopOf="@+id/tvGsm2" />

    <TextView
        android:id="@+id/tvGsm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.60dp"
        android:layout_marginTop="3.90dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:text="@string/no_sim"
        android:textColor="@android:color/white"
        android:autoSizeTextType="uniform"
        app:layout_constraintStart_toEndOf="@id/imgWave2"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="UnusedAttribute" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupSim2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imgWave2, tvGsm2" />

</androidx.constraintlayout.widget.ConstraintLayout>