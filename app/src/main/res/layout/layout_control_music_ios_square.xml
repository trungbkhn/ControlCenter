<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/sf_pro_text_regular"
            android:freezesText="true"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/audio_music"
            android:textColor="@color/colorTextControl"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintBottom_toTopOf="@id/tvArtist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/sf_pro_text_regular"
            android:freezesText="true"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/colorTextControl"
            android:textSize="@dimen/text_size_10"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/playPauseAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/previousAction"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pre"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseAction"
            app:layout_constraintEnd_toStartOf="@+id/playPauseAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playPauseAction" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/playPauseAction"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/play"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/nextAction"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toBottomOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/playPauseAction" />

<!--        <SeekBar-->
<!--            android:id="@+id/progressTime"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:progress="50"-->
<!--            -->
<!--            android:padding="0dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/playPauseAction"-->
<!--            android:layout_width="0dp"-->
<!--            android:progressDrawable="@drawable/custom_seekbar_progress_music_os"-->
<!--            android:thumb="@null"-->
<!--            android:layout_height="wrap_content"/>-->

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group4.CustomSeekbarHorizontalView
            android:id="@+id/controlTimeMusic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintTop_toBottomOf="@id/playPauseAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintHeight_percent="0.04" />

        <TextView
            android:id="@+id/tvTimeCurrent"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintTop_toBottomOf="@id/controlTimeMusic"
            app:layout_constraintStart_toStartOf="@id/controlTimeMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDuration"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_10"
            app:layout_constraintTop_toBottomOf="@id/controlTimeMusic"
            app:layout_constraintEnd_toEndOf="@id/controlTimeMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="tvName,tvArtist,previousAction,playPauseAction,nextAction, controlTimeMusic, tvTimeCurrent,tvDuration" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupNoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tvDes,tvVerify" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="left|center_vertical"
            android:text="@string/text_des_permission_notification_view"
            android:textColor="@color/colorTextControl"
            android:textSize="@dimen/textSizeNotyContent"
            app:layout_constraintBottom_toTopOf="@+id/tvVerify"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:background="@drawable/bg_ripple_gray_radius_16"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:text="@string/verify_access"
            android:textColor="@color/colorTextDayOfMonth"
            android:textSize="@dimen/textSizeNotyTitle"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playPauseAction" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>