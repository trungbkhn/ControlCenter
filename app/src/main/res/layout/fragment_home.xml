<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_detail_splash">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/colorTextLockBold"
            android:textDirection="locale"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/toggleUse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvRunning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/running"
            android:textColor="@color/colorTextLockBold"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/toggleUse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppName" />

        <ToggleButton
            android:id="@+id/toggleUse"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/toggle_home"
            android:checked="false"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="@+id/tvRunning"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAppName" />


        <androidx.legacy.widget.Space
            android:id="@+id/spaceBottomTvRunning"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRunning" />

        <TextView
            android:id="@+id/tvActivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_text_activate"
            android:drawablePadding="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center|left"
            android:maxLines="2"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="@string/text_activate_home"
            android:textColor="@color/black"
            app:drawableLeftCompat="@drawable/ic_info_fill"
            app:drawableRightCompat="@drawable/ic_arrow_forward_ios"
            app:layout_constraintTop_toBottomOf="@id/spaceBottomTvRunning" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryAppear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layoutDirection="ltr"
            android:paddingBottom="13dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvActivate"
            app:spanCount="2" />

        <include
            android:id="@+id/fab"
            layout="@layout/custom_fab_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>