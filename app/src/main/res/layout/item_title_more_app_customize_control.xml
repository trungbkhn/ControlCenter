<?xml version="1.0" encoding="utf-8"?>
<layout>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">


        <TextView
            android:id="@+id/detailInclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_detail_splash"
            android:fontFamily="@font/sf_pro_text_regular"
            android:padding="10dp"
            android:text="@string/text_add_organize_control"
            android:textColor="@color/colorText"
            android:textDirection="ltr"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/layoutTextMore"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/text_detail_splash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailInclude" />


        <TextView
            android:id="@+id/textMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/more_controls"
            android:textColor="@color/color_3C3C43"
            android:textDirection="ltr"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/layoutTextMore"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layoutTextMore" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_line"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_line"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>