<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutNoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_noty"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgState"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="14dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="9dp"
            android:src="@drawable/ic_expaned_noty"
            app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgIcon" />

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="0dp"
            android:layout_height="49.40dp"
            app:layout_constraintRight_toRightOf="@+id/imgState"
            app:layout_constraintTop_toTopOf="@+id/tvTitle" />

        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMsg" />

        <TextView
            android:id="@+id/tvNameNoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/imgIcon"
            app:layout_constraintRight_toLeftOf="@+id/tvTimeNoty"
            app:layout_constraintTop_toTopOf="@+id/imgIcon" />

        <TextView
            android:id="@+id/tvTimeNoty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/tvNameNoty"
            app:layout_constraintRight_toLeftOf="@+id/imgState"
            app:layout_constraintTop_toTopOf="@+id/imgIcon"
            app:layout_constraintBottom_toBottomOf="@id/imgIcon"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_red_text_count"
            app:layout_constraintBottom_toBottomOf="@+id/detailName2"
            app:layout_constraintRight_toRightOf="@+id/imgState"
            app:layout_constraintTop_toTopOf="@+id/detailName2" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvTitle, tvMsg, imgThumb" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupDetailExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="name1, name2, detailName1, detailName2, tvCount" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/detailName1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular"
            android:maxLines="1"
            android:textSize="14sp"
            android:gravity="start|center"
            app:layout_constraintBottom_toBottomOf="@+id/name1"
            app:layout_constraintLeft_toRightOf="@+id/gdLine"
            app:layout_constraintRight_toRightOf="@+id/imgState"
            app:layout_constraintTop_toTopOf="@+id/name1" />

        <TextView
            android:id="@+id/detailName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular"
            android:maxLines="1"
            android:gravity="start|center"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/name2"
            app:layout_constraintLeft_toRightOf="@+id/gdLine"
            app:layout_constraintRight_toLeftOf="@+id/tvCount"
            app:layout_constraintTop_toTopOf="@+id/name2" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular"
            android:maxLines="1"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/imgIcon"
            app:layout_constraintRight_toLeftOf="@+id/imgThumb"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/imgIcon"
            app:layout_constraintRight_toLeftOf="@+id/imgThumb"
            app:layout_constraintTop_toBottomOf="@+id/imgIcon" />

        <TextView
            android:id="@+id/name1"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:textSize="17sp"
            android:includeFontPadding="false"
            android:gravity="start|center"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
            app:layout_constraintLeft_toLeftOf="@+id/imgIcon"
            app:layout_constraintRight_toLeftOf="@+id/gdLine"
            app:layout_constraintTop_toTopOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:gravity="start|center"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMsg"
            app:layout_constraintLeft_toLeftOf="@+id/imgIcon"
            app:layout_constraintRight_toLeftOf="@+id/gdLine"
            app:layout_constraintTop_toTopOf="@+id/tvMsg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSnoozed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_noty"
        android:paddingBottom="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgStateSnoozed"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="8dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_expaned_noty"
            app:layout_constraintBottom_toBottomOf="@+id/textSnoozed"
            app:layout_constraintLeft_toRightOf="@+id/textTimeSnoozed"
            app:layout_constraintTop_toTopOf="@+id/textSnoozed" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/textSnoozed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/text_snoozed_for"
            android:textColor="@color/color_gray_waning"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textUndo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textUndo" />

        <View
            android:id="@+id/lineSnoozed"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/background_line"
            app:layout_constraintTop_toBottomOf="@+id/textSnoozed" />

        <TextView
            android:id="@+id/textTimeSnoozed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@+id/textSnoozed"
            app:layout_constraintLeft_toRightOf="@+id/textSnoozed"
            app:layout_constraintTop_toTopOf="@+id/textSnoozed" />

        <TextView
            android:id="@+id/textUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/text_undo"
            android:textColor="@color/color_undo"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/tv15Minutes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_while_ripple_select_setting"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/text_15_minutes"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv30Minutes"
            app:layout_constraintLeft_toLeftOf="@+id/textSnoozed"
            app:layout_constraintTop_toBottomOf="@+id/lineSnoozed" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/tv30Minutes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_while_ripple_select_setting"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/text_30_minutes"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv1Hours"
            app:layout_constraintLeft_toLeftOf="@+id/tv15Minutes"
            app:layout_constraintTop_toBottomOf="@+id/tv15Minutes" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/tv1Hours"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_while_ripple_select_setting"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/text_1_house"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tv1Day"
            app:layout_constraintLeft_toLeftOf="@+id/tv30Minutes"
            app:layout_constraintTop_toBottomOf="@+id/tv30Minutes" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/tv1Day"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_while_ripple_select_setting_bottom"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="@string/text_1_day"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv1Hours"
            app:layout_constraintTop_toBottomOf="@+id/tv1Hours" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupOptionSnoozed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv1Day, tv1Hours, tv30Minutes, tv15Minutes, lineSnoozed" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSettingNoty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_noty"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgImageNoti"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgGoSettingNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_setting_silent"
            app:layout_constraintBottom_toBottomOf="@+id/imgImageNoti"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgImageNoti" />

        <TextView
            android:id="@+id/tvNameApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/imgImageNoti"
            app:layout_constraintLeft_toRightOf="@+id/imgImageNoti"
            app:layout_constraintTop_toTopOf="@+id/imgImageNoti" />

        <TextView
            android:id="@+id/tvTimeNotySetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/imgGoSettingNotification"
            app:layout_constraintLeft_toRightOf="@+id/tvNameApp"
            app:layout_constraintRight_toLeftOf="@+id/imgGoSettingNotification"
            app:layout_constraintTop_toTopOf="@+id/imgGoSettingNotification" />


        <TextView
            android:id="@+id/tvChannelNoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgGoSettingNotification" />


        <View
            android:id="@+id/bgWaning"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/boder_blue"
            app:layout_constraintBottom_toBottomOf="@+id/detailWaning"
            app:layout_constraintLeft_toLeftOf="@+id/imgImageNoti"
            app:layout_constraintRight_toRightOf="@+id/imgGoSettingNotification"
            app:layout_constraintTop_toBottomOf="@+id/tvChannelNoty" />

        <TextView
            android:id="@+id/tvWaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:drawableStart="@drawable/ic_alert_notifications"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="8dp"
            android:text="@string/text_alert"
            android:textColor="@color/color_undo"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/bgWaning"
            app:layout_constraintTop_toTopOf="@+id/bgWaning" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/detailWaning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="8dp"
            android:text="@string/text_detail_waning"
            android:textColor="@color/color_gray_waning"
            android:textSize="14sp"
            android:paddingHorizontal="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/bgWaning"
            app:layout_constraintRight_toRightOf="@id/bgWaning"
            app:layout_constraintTop_toBottomOf="@+id/tvWaning" />

        <View
            android:id="@+id/bgSilent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/boder_gray"
            app:layout_constraintBottom_toBottomOf="@+id/detailSilent"
            app:layout_constraintLeft_toLeftOf="@+id/bgWaning"
            app:layout_constraintRight_toRightOf="@+id/bgWaning"
            app:layout_constraintTop_toBottomOf="@+id/bgWaning" />

        <TextView
            android:id="@+id/tvSilent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:drawableStart="@drawable/ic_silent_notifications"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="8dp"
            android:text="@string/text_slide"
            android:textColor="@color/color_gray_waning"
            app:layout_constraintLeft_toLeftOf="@+id/bgSilent"
            app:layout_constraintTop_toBottomOf="@+id/tvWaning"
            app:layout_constraintTop_toTopOf="@+id/bgSilent" />

        <com.tapbi.spark.controlcenter.feature.controlcenter.textview.TextViewRobotoRegular
            android:id="@+id/detailSilent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingBottom="8dp"
            android:text="@string/text_detail_alert"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tvSilent"
            app:layout_constraintTop_toBottomOf="@+id/tvSilent" />

        <TextView
            android:id="@+id/tvOffNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="16dp"
            android:text="@string/text_off_noty"
            android:textColor="@color/color_undo"
            app:layout_constraintLeft_toLeftOf="@+id/imgImageNoti"
            app:layout_constraintTop_toBottomOf="@+id/bgSilent" />

        <TextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingBottom="16dp"
            android:text="@string/text_done"
            android:textColor="@color/color_undo"
            app:layout_constraintRight_toRightOf="@+id/imgGoSettingNotification"
            app:layout_constraintTop_toBottomOf="@+id/bgSilent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rccChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"

        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutNoti" />

</LinearLayout>