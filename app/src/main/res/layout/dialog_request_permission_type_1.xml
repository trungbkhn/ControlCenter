<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_bottom_sheet_dialog_round_24">

        <ImageView
            android:id="@+id/icTop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_top"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tapbi.spark.controlcenter.views.FixFocusErrorNestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icTop2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:text="@string/activate_s"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAccessibility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_textview_round_select_12"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:maxLines="2"
                    android:padding="6dp"
                    android:text="@string/step_1"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toStartOf="@id/tvOverDraw"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                <TextView
                    android:id="@+id/tvOverDraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/bg_textview_round_unselect_12"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:maxLines="2"
                    android:padding="6dp"
                    android:text="@string/step_2"
                    android:textColor="@color/black50"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAccessibility"
                    app:layout_constraintEnd_toStartOf="@id/tvNotification"
                    app:layout_constraintStart_toEndOf="@id/tvAccessibility"
                    app:layout_constraintTop_toTopOf="@id/tvAccessibility" />

                <TextView
                    android:id="@+id/tvNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_textview_round_unselect_12"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:maxLines="2"
                    android:padding="6dp"
                    android:text="@string/step_3"
                    android:textColor="@color/black50"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAccessibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvOverDraw"
                    app:layout_constraintTop_toTopOf="@id/tvAccessibility" />

                <ImageView
                    android:id="@+id/imageContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/image_accessibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccessibility" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/enable_s_in_appear_on_top_settings"
                    android:textColor="@color/color_989898"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toTopOf="@id/flAds"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageContent" />


                    <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                        android:id="@+id/flAds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="90dp"
                        android:tag="@string/tag_native_request_permission"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:gnt_template_type="@layout/gnt_admob_native_layout_no_media_2"
                        app:priority="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.tapbi.spark.controlcenter.views.FixFocusErrorNestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>