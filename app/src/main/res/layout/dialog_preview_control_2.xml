<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/layoutDismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_4d090909">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="58dp"
            android:background="@drawable/bg_dialog_preview"
            android:clickable="true"
            android:focusable="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ads_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1">

                <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                    android:id="@+id/fl_ads"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="90dp"
                    android:visibility="visible"
                    android:tag="@string/tag_native_preview_my_theme"
                    app:gnt_template_type="@layout/gnt_admob_native_layout_no_media_2"
                    app:priority="1" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvPreview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/preview"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cv_ads_wrap" />

            <ImageView
                android:id="@+id/imgDone"
                app:layout_constraintTop_toTopOf="@id/tvPreview"
                android:padding="5dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/icon_done"
                app:tint="#9D9D9D"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="77dp"
                android:layout_marginVertical="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/tvAppThisControl"
                app:layout_constraintDimensionRatio="184:404"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPreview">

                <ImageView
                    android:id="@+id/imPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvAppThisControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:gravity="center"
                android:text="@string/apply_this_control_center_to_use"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/tvApply" />

            <TextView
                android:id="@+id/tvApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sf_pro_text_bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="@string/next"
                android:textColor="@color/color_blue"
                android:textSize="14sp"
                android:visibility="invisible"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/sf_pro_display_bold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:text="@string/delete_noty"
                android:textColor="#CD0000"
                android:textSize="14sp"
                android:visibility="visible"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>