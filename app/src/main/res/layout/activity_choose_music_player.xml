<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <include
            android:id="@+id/viewHeader"
            layout="@layout/view_header" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/text_detail_splash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewHeader" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listMusicPlayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewHeader" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_line"
            app:layout_constraintTop_toTopOf="@+id/listMusicPlayer" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_line"
            app:layout_constraintBottom_toBottomOf="@+id/viewHeader" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_line"
            app:layout_constraintBottom_toBottomOf="@+id/listMusicPlayer" />

        <FrameLayout
            android:id="@+id/bgLoading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/text_detail_splash"
            android:clickable="false"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewHeader">

            <ProgressBar
                android:id="@+id/icProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="#EF8354" />

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

