<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">


        <TextView
            android:id="@+id/tvAppNameExpand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorTextNotyWhite"
            android:textSize="@dimen/text_24"
            app:layout_constraintEnd_toStartOf="@+id/markShowLess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/markShowLess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_8dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/radius_15"
            app:cardElevation="@dimen/size_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/markClear"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lnShowLess"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:orientation="horizontal">

                <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundItemView
                    android:id="@+id/bgShowLess"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    android:background="@color/colorBackgroundContentWidget"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgHideListNoty"
                    android:layout_width="@dimen/size_12"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_9dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_show_less"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvShowLess"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/show_less"
                    android:textColor="@color/color_3F3F3F"
                    android:textSize="@dimen/text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imgHideListNoty" />

                <View
                    android:id="@+id/viewClickShowLess"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/markClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/radius_15"
            app:cardElevation="@dimen/size_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lnDelete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30"
                android:orientation="horizontal">

                <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundItemView
                    android:id="@+id/bgClear"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    android:background="@color/colorBackgroundContentWidget"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/text_clear"
                    android:textColor="@color/color_3F3F3F"
                    android:textSize="@dimen/text_13"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgClearAllNoty"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_clean_item_child_noty"
                    android:tint="@color/color_3F3F3F"
                    tools:ignore="UseAppTint" />

                <View
                    android:id="@+id/viewClickClear"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="@dimen/size_0dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>