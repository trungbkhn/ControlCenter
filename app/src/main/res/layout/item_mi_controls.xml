<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/icColor"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/viewBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_shape_double_border"
            app:layout_constraintTop_toTopOf="@id/icColor"
            app:layout_constraintStart_toStartOf="@id/icColor"
            app:layout_constraintBottom_toBottomOf="@id/icColor"
            app:layout_constraintEnd_toEndOf="@id/icColor"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>