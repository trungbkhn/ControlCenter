<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="false">

        <com.tapbi.spark.controlcenter.feature.controlios14.view.MenuRightLayout
            android:id="@+id/menuRight"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/swipeLayout"
            app:layout_constraintWidth_percent="0.45">

            <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundItemView
                android:id="@+id/bgTvView"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="@dimen/size_0dp"
                app:layout_constraintBottom_toBottomOf="@id/tvViewNoty"
                app:layout_constraintEnd_toEndOf="@id/tvViewNoty"
                app:layout_constraintStart_toStartOf="@id/tvViewNoty"
                app:layout_constraintTop_toTopOf="@id/tvViewNoty" />

            <View
                android:id="@+id/bgTvViewColor"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="@dimen/size_0dp"
                android:background="@color/colorBackgroundContentWidget"
                app:layout_constraintBottom_toBottomOf="@id/tvViewNoty"
                app:layout_constraintEnd_toEndOf="@id/tvViewNoty"
                app:layout_constraintStart_toStartOf="@id/tvViewNoty"
                app:layout_constraintTop_toTopOf="@id/tvViewNoty" />

            <TextView
                android:id="@+id/tvViewNoty"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_8dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:lines="1"
                android:text="@string/view_noty"
                android:textColor="@color/colorTextNotyOther"
                android:textSize="@dimen/textSizeNotyMenu"
                app:layout_constraintStart_toStartOf="parent" />

            <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundItemView
                android:id="@+id/bgTvRight"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="@dimen/size_0dp"
                app:layout_constraintBottom_toBottomOf="@id/tvMenuRight"
                app:layout_constraintEnd_toEndOf="@id/tvMenuRight"
                app:layout_constraintStart_toStartOf="@id/tvMenuRight"
                app:layout_constraintTop_toTopOf="@id/tvMenuRight" />

            <View
                android:id="@+id/bgTvRightColor"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="@dimen/size_0dp"
                android:background="@color/colorBackgroundContentWidget"
                app:layout_constraintBottom_toBottomOf="@id/tvMenuRight"
                app:layout_constraintEnd_toEndOf="@id/tvMenuRight"
                app:layout_constraintStart_toStartOf="@id/tvMenuRight"
                app:layout_constraintTop_toTopOf="@id/tvMenuRight" />


            <TextView
                android:id="@+id/tvMenuRight"
                android:layout_width="@dimen/size_0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_1dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:lines="1"
                android:text="@string/text_clear"
                android:textColor="@color/colorTextNotyOther"
                android:textSize="@dimen/textSizeNotyMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvViewNoty" />

        </com.tapbi.spark.controlcenter.feature.controlios14.view.MenuRightLayout>

        <com.tapbi.spark.controlcenter.feature.controlios14.view.SwipeLayoutNoty
            android:id="@+id/swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            app:isNotyChild="false"
            app:layout_constraintTop_toTopOf="parent">

            <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ViewTitleChildNoty
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNoty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constraintTop_toTopOf="parent" />

        </com.tapbi.spark.controlcenter.feature.controlios14.view.SwipeLayoutNoty>

        <!--        <TextView-->
        <!--            android:id="@+id/tvPos"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
