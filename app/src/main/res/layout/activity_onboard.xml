<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOnBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.tapbi.spark.controlcenter.views.NoSwipeViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/circleIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.tapbi.spark.controlcenter.feature.mishade.view.customdot.WormDotsIndicator
            android:id="@+id/circleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusable="true"
            app:dotsColor="#2073F8"
            app:dotsSize="8dp"
            app:dotsStrokeColor="#D6E3FF"
            app:layout_constraintBottom_toTopOf="@id/frAds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPager" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/circleIndicator"
            app:layout_constraintEnd_toEndOf="@id/circleIndicator"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="@id/circleIndicator"
            app:layout_constraintTop_toTopOf="@id/circleIndicator" />

        <TextView
            android:id="@+id/tvNextBottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_next_permission"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:gravity="center_vertical|end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:outlineProvider="none"
            android:paddingEnd="10dp"
            android:paddingVertical="8dp"
            android:text="@string/next_onboard"
            android:textColor="@color/_2073F8"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/circleIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/circleIndicator"
            app:layout_constraintTop_toTopOf="@+id/circleIndicator" />

        <TextView
            android:id="@+id/tvNextTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_next_permission"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:outlineProvider="none"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/next_onboard"
            android:textColor="@color/_2073F8"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                android:id="@+id/flAds1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:tag="@string/tag_native_onboard_1"

                app:gnt_template_type="@layout/gnt_admob_native_layout_no_media_2"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                android:id="@+id/flAds2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:tag="@string/tag_native_onboard_2"
                app:gnt_template_type="@layout/customize_layout_ads_onboard"
                app:layout_constraintBottom_toBottomOf="parent" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>