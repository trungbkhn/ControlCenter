<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:animateLayoutChanges="false"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content"
        android:background="@color/color_F2F2F6">

        <ImageView
            android:id="@+id/im_app"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />
        <TextView
            android:id="@+id/tv_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/im_app"
            app:layout_constraintBottom_toBottomOf="@id/im_app"
            app:layout_constraintStart_toEndOf="@id/im_app"
            android:paddingStart="12dp"
            android:textDirection="ltr"
            android:paddingEnd="12dp"
            app:layout_constraintEnd_toStartOf="@id/sw_app"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_display_medium"
            />
        <ImageView
            android:id="@+id/sw_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/im_app"
            app:layout_constraintBottom_toBottomOf="@id/im_app"
            android:layout_marginEnd="16dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/color_C6C6C8"
            app:layout_constraintTop_toBottomOf="@id/im_app"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="69dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>