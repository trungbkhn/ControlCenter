<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?android:attr/selectableItemBackground"
        android:layoutDirection="ltr">

        <View
            android:id="@+id/vBgMainItemScreenTimeout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0dp"
            android:background="@color/colorBackgroundRadiusNew"
            app:layout_constraintBottom_toTopOf="@id/vLineTransparent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_0dp"
            android:background="@color/colorBackgroundRadiusNew"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/vLineTransparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vBgMainItemScreenTimeout" />


        <View
            android:id="@+id/vLineTransparent"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="@dimen/size_1dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTime"
            app:layout_constraintTop_toBottomOf="@id/tvTime" />

        <ImageView
            android:id="@+id/imgIcTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_17dp"
            android:src="@drawable/ic_tick_white"
            app:layout_constraintBottom_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_17dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:maxLines="1"
            android:textColor="@color/colorTextNotyWhite"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgIcTick"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
