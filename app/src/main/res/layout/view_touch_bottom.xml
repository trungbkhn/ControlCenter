<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tapbi.spark.controlcenter.feature.edge.TouchTop
            android:id="@+id/vTouchNoty"
            android:layout_width="@dimen/size_0dp"
            android:scaleY="-1"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/vTouchControl"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tapbi.spark.controlcenter.feature.edge.TouchTop
            android:id="@+id/vTouchControl"
            android:layout_width="@dimen/size_0dp"
            android:scaleY="-1"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/vTouchNoty"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>