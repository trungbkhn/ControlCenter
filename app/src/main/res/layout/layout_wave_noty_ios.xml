<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imgWave1"
        android:layout_width="wrap_content"
        android:layout_height="9.10dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/wave_sim1_0" />

    <ImageView
        android:id="@+id/imgWave2"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="3.90dp"
        android:layout_marginTop="@dimen/margin_1dp"
        app:layout_constraintStart_toStartOf="@id/imgWave1"
        app:layout_constraintEnd_toEndOf="@id/imgWave1"
        app:layout_constraintTop_toBottomOf="@id/imgWave1"
        android:scaleType="centerInside"
        android:src="@drawable/wave_sim2_0" />

    <ImageView
        android:id="@+id/imgWaveOneSim"
        android:layout_width="22.10dp"
        android:layout_height="14.30dp"
        android:layout_marginTop="@dimen/margin_1dp"
        app:layout_constraintDimensionRatio="64:39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:src="@drawable/wave_0" />


    <androidx.appcompat.widget.AppCompatTextView
        android:text="@string/no_sim"
        android:id="@+id/tvNoSim"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:autoSizeMaxTextSize="15.6dp"
        app:autoSizeMinTextSize="6.50dp"
        app:autoSizeStepGranularity="1.30dp"
        app:autoSizeTextType="uniform"
        android:includeFontPadding="false"
        android:textColor="@android:color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>