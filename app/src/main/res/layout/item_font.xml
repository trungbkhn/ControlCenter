<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="26dp">

        <TextView
            android:id="@+id/tvFont"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/bg_white_ripple_round_100"
            android:text="@string/font_preview"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/sf_pro_text_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_font_border_round_100"
            android:elevation="10dp"
            android:outlineProvider="none"
            app:layout_constraintBottom_toBottomOf="@id/tvFont"
            app:layout_constraintEnd_toEndOf="@id/tvFont"
            app:layout_constraintStart_toStartOf="@id/tvFont"
            app:layout_constraintTop_toTopOf="@id/tvFont" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>