<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <com.tapbi.spark.controlcenter.feature.controlios14.view.PermissionNotificationView
        android:id="@+id/permissionNotiView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="15.60dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:isControlCenter="true" />

    <com.tapbi.spark.controlcenter.utils.helper.rcvhepler.RecyclerViewNoty
        android:id="@+id/rcvNoty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15.60dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <ImageView
        android:id="@+id/actionFlash"
        android:layout_width="45.50dp"
        android:layout_height="45.50dp"
        android:layout_marginStart="42.90dp"
        android:layout_marginBottom="49.40dp"
        android:background="@drawable/background_gray_circle_noty"
        android:padding="10.40dp"
        android:scaleType="centerInside"
        android:src="@drawable/flashlight_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/actionCamera"
        android:layout_width="45.50dp"
        android:layout_height="45.50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42.90dp"
        android:layout_marginBottom="49.40dp"
        android:background="@drawable/background_gray_circle_noty"
        android:padding="10.40dp"
        android:scaleType="centerInside"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>