<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:layoutDescription="@xml/activity_main_scene">
  <ImageView
    android:translationZ="10dp"
    android:id="@+id/imgView1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/a2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/imgView3"
    app:layout_constraintRight_toLeftOf="@+id/imgView2"
    app:layout_constraintTop_toTopOf="parent" />
  <ImageView
    app:layout_constraintDimensionRatio="w, 0.7"
    android:translationZ="5dp"
    android:id="@+id/imgView2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/a1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/imgView1"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <ImageView
    app:layout_constraintDimensionRatio="w, 0.7"
    android:translationZ="0dp"
    android:id="@+id/imgView3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/a3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/imgView1"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>