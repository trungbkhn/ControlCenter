<?xml version="1.0" encoding="utf-8"?>
<com.tapbi.spark.controlcenter.feature.controlios14.view.noty.MaskItemNotyView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maskItemNotyView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:animateLayoutChanges="true"
    android:textDirection="ltr">

    <com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundItemView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tapbi.spark.controlcenter.feature.controlios14.view.SwipeMenuLayout
            android:id="@+id/swipeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundContentWidget"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:ios="false"
            app:leftSwipe="true"
            app:swipeEnable="true">

            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="19.50dp"
                    android:orientation="horizontal">

                    <com.tapbi.spark.controlcenter.feature.controlios14.view.ImageCustom
                        android:id="@+id/icon"
                        android:layout_width="19.50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tvAppName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorTextNotyOther"
                        android:textDirection="ltr"
                        android:textSize="13.00sp" />

                    <TextView
                        android:id="@+id/tvPostTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:gravity="center"
                        android:textColor="@color/colorTextNotyOther"
                        android:textDirection="ltr"
                        android:textSize="11.70sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2.60dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_text_semi_bold"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/colorTextContentNoty"
                        android:textDirection="ltr"
                        android:textSize="@dimen/textSizeNotyTitle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/imgImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:gravity="center_vertical"
                        android:maxLines="5"
                        android:textColor="@color/colorTextContentNoty"
                        android:textDirection="ltr"
                        android:textSize="@dimen/textSizeNotyContent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/imgImage"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

                    <TextView
                        android:id="@+id/tvNumNoty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTextNotyOther"
                        android:textDirection="ltr"
                        android:textSize="@dimen/textSizeNumNoty"
                        app:layout_constraintTop_toBottomOf="@+id/tvContent" />


                    <ImageView
                        android:id="@+id/imgImage"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:paddingStart="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvTitle" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--                <TextView
        android:fontFamily="@font/sf_pro_text_regular"-->
                <!--                  android:id="@+id/tvManager"-->
                <!--                  android:layout_width="68dp"-->
                <!--                  android:layout_height="match_parent"-->
                <!--                  android:gravity="center"-->
                <!--                  android:text="@string/view_manager"-->
                <!--                  android:textColor="@color/colorTextNotyOther"-->
                <!--                  android:textSize="@dimen/textSizeNotyContent" />-->

                <!--                <View-->
                <!--                  android:layout_width="0.5dp"-->
                <!--                  android:layout_height="match_parent"-->
                <!--                  android:background="@color/colorTextNotyOther" />-->

                <TextView
                    android:id="@+id/tvViewNoty"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:text="@string/view_noty"
                    android:textColor="@color/colorTextNotyOther"
                    android:textDirection="ltr"
                    android:textSize="@dimen/textSizeNotyContent" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTextNotyOther" />

                <TextView
                    android:id="@+id/tvDelete"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:gravity="center"
                    android:text="@string/delete_noty"
                    android:textColor="@color/colorTextNotyOther"
                    android:textDirection="ltr"
                    android:textSize="@dimen/textSizeNotyContent" />
            </LinearLayout>
        </com.tapbi.spark.controlcenter.feature.controlios14.view.SwipeMenuLayout>
    </com.tapbi.spark.controlcenter.feature.controlios14.view.noty.ImageBackgroundItemView>
</com.tapbi.spark.controlcenter.feature.controlios14.view.noty.MaskItemNotyView>