<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_line33"
            app:layout_constraintGuide_percent="0.33"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group3.ImageBackground
            android:id="@+id/imgBackground"
            app:layout_constraintEnd_toStartOf="@id/guide_line33"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.5"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:padding="5dp"
            android:src="@drawable/ic_rotate_ios"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            app:layout_constraintEnd_toEndOf="@+id/imgBackground"
            app:layout_constraintStart_toStartOf="@+id/imgBackground"
            app:layout_constraintTop_toTopOf="@+id/imgBackground"
            />

        <TextView
            android:id="@+id/tvRotate"
            android:textSize="@dimen/text_size_12"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="@id/guide_line33"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/lock_rotation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>