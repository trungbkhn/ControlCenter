<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/custom_background_item_new_automation"
            app:layout_constraintBottom_toBottomOf="@id/im_delete"
            app:layout_constraintLeft_toLeftOf="@id/im_delete"
            app:layout_constraintRight_toRightOf="@id/im_delete"
            app:layout_constraintTop_toTopOf="@id/im_delete" />

        <ImageView
            android:id="@+id/im_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_background_item_new_automation"
            android:padding="14dp"
            android:src="@drawable/icon_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_background_item_new_automation"
            app:layout_constraintBottom_toBottomOf="@id/im_delete"
            app:layout_constraintLeft_toRightOf="@id/im_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/im_delete" />


        <ImageView
            android:id="@+id/im_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_clock"
            app:layout_constraintBottom_toBottomOf="@id/view_content"
            app:layout_constraintLeft_toLeftOf="@id/view_content"
            app:layout_constraintTop_toTopOf="@id/view_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/view_content"
            app:layout_constraintLeft_toLeftOf="@id/view_content"
            app:layout_constraintTop_toTopOf="@id/view_content">

            <ImageView
                android:id="@+id/im_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:scaleX="1.3"
                android:scaleY="1.3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/day"
            app:layout_constraintEnd_toStartOf="@id/switch_time"
            app:layout_constraintStart_toEndOf="@id/im_clock"
            app:layout_constraintTop_toTopOf="@id/view_content"
            tools:text="8:00 AM - 9:00 AM" />

        <TextView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_regular"
            android:maxLines="1"
            android:textColor="@color/color_77777B"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/im_clock"
            app:layout_constraintRight_toLeftOf="@id/switch_time"
            app:layout_constraintTop_toBottomOf="@id/time"
            tools:text="Every day" />

        <ImageView
            android:id="@+id/switch_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            app:layout_constraintBottom_toBottomOf="@id/view_content"
            app:layout_constraintRight_toRightOf="@id/view_content"
            app:layout_constraintTop_toTopOf="@id/view_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>