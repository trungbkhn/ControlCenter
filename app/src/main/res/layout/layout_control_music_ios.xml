<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">


        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/cvPlayerIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/glv41"
            app:layout_constraintStart_toStartOf="@id/glv6"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/sf_pro_text_regular"
            android:freezesText="true"
            android:gravity="start|bottom"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/audio_music"
            android:textColor="@color/colorTextControl"
            android:textSize="13dp"
            app:layout_constraintBottom_toTopOf="@id/tvArtist"
            app:layout_constraintEnd_toStartOf="@id/glv84"
            app:layout_constraintStart_toStartOf="@id/glv51"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/sf_pro_text_regular"
            android:freezesText="true"
            android:gravity="start|bottom"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/colorTextControl"
            android:textSize="11dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintBottom_toTopOf="@+id/glh31"
            app:layout_constraintEnd_toEndOf="@id/glv84"
            app:layout_constraintStart_toEndOf="@id/glv51" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/previousAction"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pre"
            app:layout_constraintBottom_toTopOf="@id/controlTimeMusic"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/glv55"
            app:layout_constraintTop_toBottomOf="@id/glh31"
            app:layout_constraintWidth_percent="0.087" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/playPauseAction"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/play"
            app:layout_constraintBottom_toTopOf="@id/controlTimeMusic"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/nextAction"
            app:layout_constraintStart_toEndOf="@id/previousAction"
            app:layout_constraintTop_toBottomOf="@id/glh31"
            app:layout_constraintWidth_percent="0.10" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group2.MusicControlView
            android:id="@+id/nextAction"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_next"
            app:layout_constraintBottom_toTopOf="@id/controlTimeMusic"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/glv91"
            app:layout_constraintTop_toBottomOf="@id/glh31"
            app:layout_constraintWidth_percent="0.087" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group4.CustomSeekbarHorizontalView
            android:id="@+id/controlTimeMusic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:progress="0"
            app:layout_constraintBottom_toTopOf="@id/glh72"
            app:layout_constraintEnd_toEndOf="@id/glv97"
            app:layout_constraintHeight_percent="0.04"
            app:layout_constraintStart_toStartOf="@id/glv51" />


        <TextView
            android:id="@+id/tvTimeCurrent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="top"
            android:maxLines="1"
            android:text="0:00"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/playPauseAction"
            app:layout_constraintStart_toStartOf="@id/glv51"
            app:layout_constraintTop_toBottomOf="@id/glh77" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="top|end"
            android:maxLines="1"
            android:text="0:00"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/glv97"
            app:layout_constraintStart_toEndOf="@id/playPauseAction"
            app:layout_constraintTop_toBottomOf="@id/glh77" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="tvName,tvArtist,previousAction,playPauseAction,nextAction,cvPlayerIcon, controlTimeMusic, tvTimeCurrent,tvDuration" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupNoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tvDes,tvVerify" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="left|center_vertical"
            android:text="@string/text_des_permission_notification_view"
            android:textColor="@color/colorTextControl"
            android:textSize="@dimen/textSizeNotyContent"
            app:layout_constraintBottom_toTopOf="@+id/tvVerify"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:background="@drawable/bg_ripple_gray_radius_16"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:text="@string/verify_access"
            android:textColor="@color/colorTextDayOfMonth"
            android:textSize="@dimen/textSizeNotyTitle"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playPauseAction" />

        <ImageView
            android:id="@+id/imgHeadphone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_headphone"
            app:layout_constraintBottom_toBottomOf="@id/glh31"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/glv97"
            app:layout_constraintStart_toStartOf="@id/glv84"
            app:layout_constraintTop_toTopOf="@id/glh6" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.06" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.06" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.31" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.72" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.77" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.41" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.51" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv97"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.84" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>