<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/icShape"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:elevation="2dp"
            android:outlineProvider="none"
            android:padding="6dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/view_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewBorder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_shape_border"
            android:elevation="10dp"
            android:outlineProvider="none"
            app:layout_constraintBottom_toBottomOf="@id/icShape"
            app:layout_constraintEnd_toEndOf="@id/icShape"
            app:layout_constraintStart_toStartOf="@id/icShape"
            app:layout_constraintTop_toTopOf="@id/icShape" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>