<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:background="@drawable/bg_rounded_black_60"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="65dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconControl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="13dp"
        android:layout_marginVertical="13dp"
        app:contentPadding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:shapeAppearanceOverlay="@style/circle"
        android:background="#1CFFFFFF"
        app:srcCompat="@drawable/ic_airplane_ios" />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="@string/airplane_mode"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintStart_toEndOf="@id/iconControl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvState"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tvState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:alpha="0.5"
        android:textSize="15dp"
        android:text="@string/text_on"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        app:layout_constraintVertical_chainStyle="packed"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        />
</androidx.constraintlayout.widget.ConstraintLayout>