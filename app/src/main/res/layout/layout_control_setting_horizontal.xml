<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideStart"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.074"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideTop"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.174"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideBottom"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.826"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideEnd"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.926"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.AirPlaneSettingView
            android:id="@+id/airplane_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_airplane_ios"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@id/data_action"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="@id/guideStart"
            app:layout_constraintBottom_toBottomOf="@id/guideBottom"
            app:layout_constraintTop_toTopOf="@id/guideTop" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.DataSettingView
            android:id="@+id/data_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_data_ios"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/airplane_action"

            app:layout_constraintEnd_toStartOf="@id/wifi_action"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/guideBottom"
            app:layout_constraintTop_toTopOf="@id/guideTop"/>


        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.WifiSettingView
            android:id="@+id/wifi_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_wifi_ios"
            android:padding="10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/data_action"
            app:layout_constraintEnd_toStartOf="@id/bluetooth_action"
            app:layout_constraintBottom_toBottomOf="@id/guideBottom"
            app:layout_constraintTop_toTopOf="@id/guideTop" />

        <com.tapbi.spark.controlcenter.feature.controlios14.view.control.group1.BluetoothSettingView
            android:id="@+id/bluetooth_action"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:src="@drawable/ic_bluetoolh_ios"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/wifi_action"
            app:layout_constraintEnd_toEndOf="@id/guideEnd"
            app:layout_constraintBottom_toBottomOf="@id/guideBottom"
            app:layout_constraintTop_toTopOf="@id/guideTop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>