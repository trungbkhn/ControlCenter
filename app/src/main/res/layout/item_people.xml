<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_people"
            android:layout_width="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/im_people"
                android:layout_width="40dp"
                android:background="@drawable/bacground_imgae_people"
                android:layout_height="40dp">
            </ImageView>
            <TextView
                android:id="@+id/tv_name_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_rounded_medium"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_name_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cv_people"
            app:layout_constraintEnd_toStartOf="@id/sw_people"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            />
        <TextView
            android:id="@+id/tv_phone_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_name_people"
            app:layout_constraintTop_toBottomOf="@id/tv_name_people"
            app:layout_constraintEnd_toStartOf="@id/sw_people"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textColor="@color/color_737379"
            android:textSize="11sp"
            />
        <ImageView
            android:id="@+id/sw_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_switch_off"
            app:layout_constraintTop_toTopOf="@id/cv_people"
            app:layout_constraintBottom_toBottomOf="@id/cv_people"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0.3dp"
            android:background="@color/color_C6C6C8"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_people"
            android:layout_marginTop="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="53dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>