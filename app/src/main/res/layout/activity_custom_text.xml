<?xml version="1.0" encoding="utf-8"?>
<layout>

  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/layoutParent"
      android:background="@color/colorPrimary"
      android:clickable="true">

    <include
      android:id="@+id/viewHeader"
      layout="@layout/view_header" />


    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/center"
      android:layout_width="wrap_content"
      app:layout_constraintGuide_percent="0.5"
      android:orientation="vertical"
      android:layout_height="wrap_content" />


    <EditText
      android:paddingStart="16dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:background="@null"
      android:maxLines="1"
      android:singleLine="true"
      app:layout_constraintTop_toBottomOf="@+id/viewHeader"
      android:layout_width="match_parent"
      android:id="@+id/edtCustomText"
      android:maxLength="20"
      android:layout_height="45dp" />

    <ImageView
      android:id="@+id/imgClear"
      android:layout_marginEnd="16dp"
      app:layout_constraintRight_toRightOf="@+id/edtCustomText"
      app:layout_constraintBottom_toBottomOf="@+id/edtCustomText"
      app:layout_constraintTop_toTopOf="@+id/edtCustomText"
      android:src="@drawable/ic_clear_edittext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />


    <View
      android:background="@color/text_detail_splash"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@+id/edtCustomText"
      app:layout_constraintBottom_toBottomOf="parent" />

    <View
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/viewHeader"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/background_line" />

    <View
      android:id="@+id/v1"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/edtCustomText"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/background_line" />

    <View
      android:id="@+id/v2"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edtCustomText"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/background_line" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
