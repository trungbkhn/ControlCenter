<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/viewClickDismiss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDialogChooseStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_dialog_preview"
            android:focusable="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ads_wrap_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                    android:id="@+id/fl_ads_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="90dp"
                    android:tag="@string/tag_native_choose_style"
                    android:visibility="visible"
                    app:gnt_template_type="@layout/gnt_admob_native_layout_no_media_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:priority="1" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="center"
                android:text="@string/choose_style"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_ads_wrap_1" />


            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="42dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="center"
                android:text="@string/choose_the_style_you_want_then_click_to_edit_to_custom_more"
                android:textColor="#9921283F"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/motion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorPrimary"
                app:layoutDescription="@xml/activity_main_scene"
                app:layout_constraintBottom_toTopOf="@id/tvEditTheme"
                app:layout_constraintDimensionRatio="288:280"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvContent">

                <ImageView
                    android:id="@+id/imgView3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/a3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w, 0.7"
                    app:layout_constraintLeft_toRightOf="@+id/imgView2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/a1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/imgView2"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/imgView2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/a2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="w, 0.7"
                    app:layout_constraintLeft_toRightOf="@+id/imgView1"
                    app:layout_constraintRight_toLeftOf="@id/imgView3"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.motion.widget.MotionLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"
                android:clipToPadding="true"
                app:layout_constraintTop_toBottomOf="@id/motion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabBackground="@drawable/tab_selector_2"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="17dp"
                app:tabMinWidth="17dp"
                app:tabMode="scrollable"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp" />

            <TextView
                android:id="@+id/tvEditTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:paddingHorizontal="10dp"
                android:paddingVertical="9dp"
                android:text="@string/next"
                android:textColor="@color/color_blue"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/cv_ads_wrap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tabLayout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_ads_wrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.ads.nativetemplates.TemplateViewMultiAds
                    android:id="@+id/fl_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="90dp"
                    android:tag="@string/tag_native_choose_style"
                    android:visibility="visible"
                    app:gnt_template_type="@layout/gnt_admob_native_layout_no_media_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:priority="1" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</layout>