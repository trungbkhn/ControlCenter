<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <com.tapbi.spark.controlcenter.feature.controlios14.view.SquareImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="65.00dp"
        android:paddingTop="9.10dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="65.00dp"
        android:layout_height="26.00dp"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="13.00dp" />
</LinearLayout>